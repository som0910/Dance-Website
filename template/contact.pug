doctype html 
html 
    head 
        style 
            include ../static/style.css
            include ../static/contact.css 

    body 
        nav 
            ul 
                li #[a(href="/") Home]
                li #[a(href="/services") Our Services]
                li #[a(href="/about") About Us]
                li #[a(href="/contact") Contact Us]

        p Contact Us
        form(action="/contact", method="post") 

            <label for="name" class="form-label">Enter your name : </label>
            input(type="text", class="myInput" name="name", id="name")

            <label for="email" class="form-label">Enter your email id : </label>
            input(type="text", class="myInput" name="email", id="email")

            <label for="phone" class="form-label">Enter your phone number : </label>
            input(type="phone", class="myInput" name="phone", id="phone")

            <label for="age" class="form-label">Enter your age : </label>
            input(type="number", class="myInput" name="age", id="age")

            <label for="address" class="form-label">Enter your address : </label>
            textarea(name="address", class="myInput", rows="3") 

            button.btn Submit

